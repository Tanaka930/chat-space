.message  
  .message__user
    = message.user.name
  .message__time
    = message.created_at.strftime("%Y/%m/%d %H:%M")
  .lower-message
    - if message.content.present?
      .lower-message__text
        = message.content
  = image_tag message.image.img.url, class: 'lower-message__image' if message.image.present?
    
      